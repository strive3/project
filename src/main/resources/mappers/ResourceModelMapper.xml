<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper    
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace:命名空间,对statement的信息进行分类管理 -->
<!-- 注意：在mapper代理时，它具有特殊及重要的作用,需要和mapper接口的全限命名一致 -->
<mapper namespace="com.mywork.project.dao.ResourceModelDao">
	
	<select id="listResourceModel" resultType="com.mywork.project.domain.ResourceModel">
		SELECT * FROM resourceModel
	</select>
	
	<select id="count" resultType="java.lang.Long">
		SELECT count(*) FROM resourceModel
	</select>
	
	<insert id="addResourceModel" parameterType="com.mywork.project.domain.ResourceModel">
		INSERT INTO
		itemType(resourceModel_name,
			resourceModel_path)
		VALUES(#{resourceModel_name},
			#{resourceModel_path})
	</insert>
	
</mapper>